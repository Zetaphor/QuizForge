generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SourceDocument {
  id          String   @id @default(cuid())
  origin      String
  title       String?
  externalRef String?
  content     String
  contentHash String
  metadata    String?
  createdAt   DateTime @default(now())

  quizzes QuizSource[]
}

model Quiz {
  id                 String   @id @default(cuid())
  title              String
  topic              String?
  difficulty         String?
  generationMetadata String?
  quizJson           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  sources  QuizSource[]
  questions Question[]
  attempts  Attempt[]
}

model QuizSource {
  quizId   String
  sourceId String
  addedAt  DateTime @default(now())

  quiz   Quiz           @relation(fields: [quizId], references: [id], onDelete: Cascade)
  source SourceDocument @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@id([quizId, sourceId])
}

model Question {
  id            String   @id @default(cuid())
  quizId         String
  questionIndex  Int
  type           String
  prompt         String
  choicesJson    String?
  expectedAnswer String?
  rubricJson     String?
  metadataJson   String?
  createdAt      DateTime @default(now())

  quiz    Quiz            @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers AttemptAnswer[]

  @@unique([quizId, questionIndex])
}

model Attempt {
  id          String   @id @default(cuid())
  quizId       String
  startedAt    DateTime @default(now())
  finishedAt   DateTime?
  scorePercent Float?
  status       String   @default("in_progress")
  summaryJson  String?

  quiz    Quiz            @relation(fields: [quizId], references: [id], onDelete: Cascade)
  answers AttemptAnswer[]
}

model AttemptAnswer {
  id            String   @id @default(cuid())
  attemptId      String
  questionId     String
  userAnswer     String
  correctness    String
  score          Float?
  feedback       String?
  followup       String?
  graderJson     String?
  retryIndex     Int      @default(0)
  createdAt      DateTime @default(now())

  attempt  Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}
