{
  "name": "quizforge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "build": "npm run tailwind:build && tsc -p tsconfig.json",
    "start": "node dist/src/server/index.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "tailwind:build": "tailwindcss -i ./src/web/assets/tailwind.input.css -o ./src/web/assets/tailwind.css --minify",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "alpinejs": "^3.14.9",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.2",
    "openai": "^4.86.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.3",
    "playwright": "^1.58.2",
    "prisma": "^6.4.1",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
